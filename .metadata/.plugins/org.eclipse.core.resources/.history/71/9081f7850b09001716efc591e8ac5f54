#include "string_vector_large.h"

/*
 * Creates a new StringVectorLarge
 */
StringVectorLarge string_vector_large_create() {

	StringVectorLarge string_vector_large = (StringVectorLarge) malloc(sizeof(StringVectorLarge));
	if (string_vector == NULL) {
		fprintf(stderr, "Error allocating array: %s\n", strerror(errno));
		return NULL;
	}

	string_vector->num_elements = 0;
	string_vector->size = __MEM_BLOCK_SIZE_START_;
	string_vector->vector = (char**) calloc(sizeof(char*),
	__MEM_BLOCK_SIZE_START_);

	return string_vector;
}
